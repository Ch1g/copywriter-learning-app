<div class="container mt-3">
  <div class="row row-cols-1 row-cols-md-3 g-4 pb-3">
    <% @course_modules.each do |course_module| %>
      <div class="col d-flex">
        <div class="card h-100 text-bg-light">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-dark"><%= course_module.name %></h5>
            <p class="card-text text-dark"><%= truncate(course_module.description, length: 100) %></p>
            <a href="<%= course_module_path(course_module) %>" class="btn btn-dark mt-auto">Поехали!</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
